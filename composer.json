{
    "name": "dirtsimple/yaml2json",
    "description": "Full-fidelity YAML/JSON command-line converters",
    "license": "MIT",
    "authors": [
        {
            "name": "PJ Eby",
            "homepage": "https://github.com/pjeby"
        }
    ],
    "require-dev": {
        "symfony/yaml": "^3",
        "humbug/box": "3.7.0"
    },
    "bin": [
        "bin/yaml2json.php",
        "bin/json2yaml.php"
    ],
    "scripts": {
        "build": [
            "box compile -c box.y2j.json",
            "box compile -c box.j2y.json"
        ]
    },
    "archive": {
        "exclude": ["box.*.json", "*.php"]
    }
}
